{
  "name": "wterm",
  "version": "1.0.0",
  "description": "マルチセッションターミナル - AIエージェント間通信対応",
  "type": "module",
  "main": "src/server.ts",
  "scripts": {
    "dev:backend": "cross-env NODE_ENV=development tsx watch src/server.ts",
    "dev:client": "cd client && npm run dev",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:client\"",
    "build:client": "cd client && npm run build",
    "build": "npm run build:client",
    "start": "npm run build && tsx src/server.ts",
    "start:bun": "bun run src/server.ts",
    "dev:bun": "cross-env NODE_ENV=development bun --watch run src/server.ts"
  },
  "dependencies": {
    "node-pty": "^1.0.0",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/ws": "^8.5.10",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "tsx": "^4.7.0",
    "typescript": "^5.0.0"
  }
}
